<!DOCTYPE html>
<%- include('./partials/head.ejs') %>
<%- include('./partials/navbar.ejs') %>

   <body>
      <div class="container">
         <div class="mb-3 mt-5 d-flex justify-content-between">
            <a href="/feed">
               <button type="button" class="btn btn-success">Back</button>
            </a>
            <h1>Welcome To Thoughts</h1>
         </div>
         <div class="card">
            <div class="card-body">
               <div class="d-flex align-items-center gap-2 mb-2">
                  <div class="userPicture">
                     <img src="/pictures/profile-img-placeholder.png" alt="ptofile photo" width="50" height="50">
                  </div>
                  <div class="fw-bold name">
                     <%= feed.user.name %>
                  </div>
               </div>
               <h5 class="card-title name">
                  <%= feed.title %>
               </h5>
               <p class="time">
                  <%= feed.created_time %>
                  <br>
                  <%= feed.created_date %>
               </p>
               <p class="card-text">
                  <%= feed.message %>
               </p>
               <a href="/feed/edit/<%= feed._id %>" class="card-link">Edit Post</a>
               <a href="/delete/<%= feed._id %>" class="card-link">Delete</a>
            </div>
         </div>
      </div>
      <%- include('./partials/footer.ejs') %>
   </body>

   </html>